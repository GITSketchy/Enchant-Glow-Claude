{
  "model": {
    "type": "minecraft:select",
    "property": "minecraft:display_context",
    "cases": [
      {
        "when": [
          "fixed",
          "ground",
          "gui"
        ],
        "model": {
          "type": "minecraft:special",
          "base": "minecraft:item/shield",
          "model": {
            "type": "minecraft:shield"
          }
        }
      },
      {
        "when": [
          "firstperson_lefthand",
          "firstperson_righthand"
        ],
        "model": {
          "type": "minecraft:condition",
          "property": "minecraft:has_component",
          "component": "minecraft:enchantments",
          "ignore_default": true,
          "on_true": {
            "property": "minecraft:using_item",
            "type": "minecraft:condition",
            "on_false": {
              "type": "minecraft:composite",
              "models": [
                {
                  "type": "minecraft:model",
                  "model": "minecraft:item/enchanted_shield"
                },
                {
                  "type": "minecraft:special",
                  "model": {
                    "type": "minecraft:shield"
                  },
                  "base": "minecraft:item/shield"
                }
              ]
            },
            "on_true": {
              "type": "minecraft:composite",
              "models": [
                {
                  "type": "minecraft:model",
                  "model": "minecraft:item/enchanted_shield_blocking"
                },
                {
                  "type": "minecraft:special",
                  "model": {
                    "type": "minecraft:shield"
                  },
                  "base": "minecraft:item/shield_blocking"
                }
              ]
            }
          },
          "on_false": {
            "type": "minecraft:condition",
            "on_false": {
              "type": "minecraft:special",
              "base": "minecraft:item/shield",
              "model": {
                "type": "minecraft:shield"
              }
            },
            "on_true": {
              "type": "minecraft:special",
              "base": "minecraft:item/shield_blocking",
              "model": {
                "type": "minecraft:shield"
              }
            },
            "property": "minecraft:using_item"
          }
        }
      }
    ],
    "fallback": {
      "type": "minecraft:condition",
      "property": "minecraft:has_component",
      "component": "minecraft:enchantments",
      "ignore_default": true,
      "on_true": {
        "property": "minecraft:using_item",
        "type": "minecraft:condition",
        "on_false": {
          "type": "minecraft:composite",
          "models": [
            {
              "type": "minecraft:model",
              "model": "minecraft:item/enchanted_shield_firstperson"
            },
            {
              "type": "minecraft:special",
              "model": {
                "type": "minecraft:shield"
              },
              "base": "minecraft:item/shield"
            }
          ]
        },
        "on_true": {
          "type": "minecraft:composite",
          "models": [
            {
              "type": "minecraft:model",
              "model": "minecraft:item/enchanted_shield_blocking_firstperson"
            },
            {
              "type": "minecraft:special",
              "model": {
                "type": "minecraft:shield"
              },
              "base": "minecraft:item/shield_blocking"
            }
          ]
        }
      },
      "on_false": {
        "type": "minecraft:condition",
        "on_false": {
          "type": "minecraft:special",
          "base": "minecraft:item/shield",
          "model": {
            "type": "minecraft:shield"
          }
        },
        "on_true": {
          "type": "minecraft:special",
          "base": "minecraft:item/shield_blocking",
          "model": {
            "type": "minecraft:shield"
          }
        },
        "property": "minecraft:using_item"
      }
    }
  }
}